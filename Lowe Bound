class Solution{
public:
    int lowerBound(vector<int> &nums, int x){
        // Set the left and right boundaries
        int left = 0, right = int(nums.size());
        int ans(nums.size());
        
        while (left <= right) {
            int mid = left + (right - left) / 2;
            if (nums[mid] >= x) {
                ans = mid;
                right = mid - 1;
            } else {
                left = mid + 1;
            }
        }
        
        return ans;
    }
};
